{
  "log_level": "info",
  "mode_spec": {
    "mode": "train",
    "losses": [
      {
        "loss": "ground_truth",
        "weight": 1.0
      },
      {
        "loss": "fidelity",
        "weight": 0.01
      },
      {
        "loss": "color_cosine_similarity",
        "weight": 0.1
      }
    ],
    "dataset_spec": {
      "name": "uieb",
      "path": "uieb/processed",
      "n_epochs": 100,
      "batch_size": 4
    },
    "optimizer_spec": {
      "optimizer": "adam",
      "learning_rate": 0.002
    },
    "learning_rate_scheduler_spec": {
      "scheduler": "step_lr",
      "step_size": 25,
      "factor": 0.5
    }
  },
  "algorithmic_spec": {
    "transmission_map_patch_radius": 8,
    "guided_filter_patch_radius": 15,
